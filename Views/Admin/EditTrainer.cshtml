@model FPTAppDev.Models.Trainer

@{
    ViewBag.Title = "EditTrainer";
}

<h2>Trainer Information</h2>

@using (Html.BeginForm("EditTrainer", "Admin", FormMethod.Post))
{
@Html.AntiForgeryToken()
<hr />
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    @Html.HiddenFor(m => m.TrainerId)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Name)
    @Html.EditorFor(u => u.Name, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.Age)
    @Html.EditorFor(u => u.Age, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.Address)
    @Html.EditorFor(u => u.Address, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.Specialty)
    @Html.EditorFor(u => u.Specialty, new { htmlAttributes = new { @class = "form-control" } })
</div>

<div class="form-group">
    <button type="submit" class="btn btn-primary">Edit</button>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}