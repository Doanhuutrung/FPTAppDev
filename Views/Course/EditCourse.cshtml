@model FPTAppDev.ViewModel.CreateCourseViewModel
@{
    ViewBag.Title = "EditCourse";
}

<h2>Course Information</h2>

@using (Html.BeginForm("EditCourse", "Course", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(m => m.Course.Id)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Course.Name)
        @Html.EditorFor(u => u.Course.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Course.Description)
        @Html.EditorFor(u => u.Course.Description, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Course.Category)
        @Html.DropDownListFor(m => m.Course.CategoryId,
       new SelectList(Model.Category, "Id", "name"),
       new { @class = "form-control" }
      )
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
