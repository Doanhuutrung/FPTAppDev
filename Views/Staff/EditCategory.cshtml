@model FPTAppDev.Models.Category
@{
    ViewBag.Title = "EditCategory";
}

<h2>Course Category Information</h2>

@using (Html.BeginForm("EditCategory", "Staff", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(m => m.Id)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Name)
        @Html.EditorFor(u => u.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Description)
        @Html.EditorFor(u => u.Description, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
