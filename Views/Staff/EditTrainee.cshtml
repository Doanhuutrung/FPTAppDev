@model FPTAppDev.Models.Trainee
@{
    ViewBag.Title = "EditTrainee";
}

<h2>Trainee Information</h2>

@using (Html.BeginForm("EditTrainee", "Staff", FormMethod.Post))
{
@Html.AntiForgeryToken()
<hr />
@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    @Html.HiddenFor(m => m.TraineeId)
</div>

<div class="form-group">
    @Html.LabelFor(u => u.Name)
    @Html.EditorFor(u => u.Name, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.Age)
    @Html.EditorFor(u => u.Age, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.BirthDate)
    @Html.EditorFor(u => u.BirthDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.Address)
    @Html.EditorFor(u => u.Address, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="form-group">
    @Html.LabelFor(u => u.Education)
    @Html.EditorFor(u => u.Education, new { htmlAttributes = new { @class = "form-control" } })
</div>
<button type="submit" class="btn btn-primary">Edit</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}